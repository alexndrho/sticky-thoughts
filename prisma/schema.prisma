generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thought {
  id        String   @id @default(uuid())
  author    String
  message   String
  color     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
